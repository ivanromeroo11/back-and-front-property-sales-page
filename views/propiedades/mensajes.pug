extends ../layout/admin

block contenido 
    h2(class="text-2xl font-extrabold text-center my-10")=pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-green-500 hover:bg-green-300 text-sm font-bold text-center text-white uppercase border-solid my-5 inline-block w-full sm:w-auto") Volver a mis propiedades

    div(class="mx-auto max-w-4xl bg-white shadow rounded-lg")

        if mensajes.length 
            ul
                each mensaje in mensajes
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-800") Nombre:  
                            span(class="font-normal")= mensaje.usuarioId

                        p(class="font-bold text-gray-800") Mensaje:  
                            span(class="font-normal")= mensaje.mensaje   


                        p(class="font-bold text-gray-800") Fecha: 
                            span(class="font-normal")= mensaje.createdAt 

        else
            p(class="text-center text-gray-600") No hay mensajes
